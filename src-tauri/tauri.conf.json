{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eFlow",
  "version": "0.1.0",
  "identifier": "com.eFlow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "features": ["pytauri/standalone"]
  },
  "app": {
    "windows": [
      {
        "title": "eFlow",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/Logo-96x96.png",
      "icons/Logo-192x192.png",
      "icons/Logo-256x256.png",
      "icons/Logo-512x512.png",
      "icons/Logo.png",
      "icons/Apple-Logo.png",
      "icons/Logo.ico"
    ]
  }
}
